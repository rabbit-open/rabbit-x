<?xml version="1.0" encoding="utf-8"?>
<com.supets.pet.uctoast.ViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f000000"
    android:paddingBottom="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_tab"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="兔子小助手"
            android:autoLink="web"
            android:textColor="#333333"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/appcolor"
                android:textSize="15sp" />

            <Button
                android:id="@+id/pop_view_content_view"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/appcolor"
                android:text="详情"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</com.supets.pet.uctoast.ViewContainer>